<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <color name="default_color">#FFFFFF</color>
    <color name="pressed_color">#F3F3F3</color>

    <style name="ScreenBackground"><item name="background">@color/white</item></style>
    <style name="titleColor"><item name="android:textColor">#333333</item></style>
    <style name="subTitleColor"><item name="android:textColor">#817D7D</item></style>
    <style name="iconMenu"><item name="android:src">@drawable/ic_menu</item></style>

    <style name="iconBack"><item name="android:src">@drawable/ic_back</item></style>
    <style name="iconList"><item name="android:src">@drawable/ic_list</item></style>
    <style name="iconNext"><item name="android:src">@drawable/ic_forward</item></style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
</resources>